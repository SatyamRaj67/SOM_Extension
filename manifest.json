{
  "name": "Audio Player",
  "description": "It can work I guess, Optional working",
  "version": "1.0",
  "icons": {
    "48": "imgs/logo.png"
  },
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "imgs/logo.png"
  },
  "background": {
    "service_worker": "background/script.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab", "storage", "offscreen"]
}
